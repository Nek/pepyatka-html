<h3>{{t header.topPosts}}</h3>
<table class="table table-striped">
  <tbody>
    {{#each content.posts}}
    <tr>
      <td>{{#link-to 'user' username}}{{info.screenName}}{{/link-to}}</td>
      <td>{{score}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

